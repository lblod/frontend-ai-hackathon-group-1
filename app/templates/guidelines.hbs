{{page-title "Guidelines"}}
{{outlet}}

<div class="designation-details">
  <h1>{{this.model.designationObject.naam}}</h1>
  <p><strong>Type:</strong> {{this.model.designationObject.type.naam}}</p>
  <p><strong>Status:</strong>
    {{this.model.designationObject.status.status.naam}}
    (since
    {{date-format this.model.designationObject.status.datum "DD/MM/YYYY"}})</p>
  <p><strong>Description:</strong>
    {{this.model.designationObject.korte_beschrijving}}</p>
  <p><strong>Location:</strong>
    {{this.model.designationObject.locatie_samenvatting}}</p>
</div>

<div class="guidelines-lists">
  <div class="guidelines-box">
    <h2>Do's and don'ts</h2>
    <span class="ai-enhanced">AI enhanced</span> 
    <ul>
      {{#each this.model.annotations as |annotation|}}
        <li>
          {{annotation.body}}
          <br />
          {{#if annotation.validation.accepted}}
            (validated by a human)
          {{else if annotation.validation.denied}}
            (unvalidated by a human)
          {{else}}
            (waiting for human validation)
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>
